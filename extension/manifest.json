{
  "manifest_version": 3,
  "name": "PhishShield URL Rater",
  "version": "1.1.0",
  "description": "Rates the current page's phishing risk (1â€“100) and colors the badge. Avoids scanning search results pages.",
  "action": {
    "default_popup": "popup.html",
    "default_title": "PhishShield"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>",
    "http://127.0.0.1/*",
    "http://localhost/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["blocked.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
